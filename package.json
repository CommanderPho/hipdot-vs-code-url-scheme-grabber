{
  "name": "hipdot-vs-code-url-scheme-grabber",
  "displayName": "VS Code URL Scheme Grabber",
  "description": "easily copy the vscode link to your current file and line number either just the URL or in Markdown format",
  "publisher": "HipDotMedia",
  "license": "MIT",
  "icon": "images/icon.png",
  "version": "1.0.5",
  "repository": {
    "type": "git",
    "url": "https://github.com/CommanderPho/hipdot-vs-code-url-scheme-grabber.git"
  },
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "copy",
    "file path",
    "line number",
    "clipboard",
    "URL Scheme",
    "URI Scheme",
    "Current file and line number"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
        "explorer": [
            {
                "id": "symbolView",
                "name": "Symbol View"
            }
        ]
    },
    "commands": [
      {
        "command": "hipdot-vs-code-url-scheme-grabber.copyLink",
        "title": "ðŸ”—Copy Link to Current File and Line Number"
      },
      {
        "command": "hipdot-vs-code-url-scheme-grabber.copyMarkdownLink",
        "title": "ðŸ”—Copy Link to Current File and Line Number in Markdown Format"
      },
      {
        "command": "hipdot-vs-code-url-scheme-grabber.copyLinkAndSelection",
        "title": "ðŸ“‹ðŸ”—Copy Link to Current File and Line Number + Selection"
      },
      {
        "command": "hipdot-vs-code-url-scheme-grabber.copyMarkdownLinkAndSelection",
        "title": "ðŸ“‹ðŸ”—Copy Link to Current File and Line Number + Selection in Markdown Format"
      },
      {
        "command": "hipdot-vs-code-url-scheme-grabber.copyCurrentLanguageServerSymbols",
        "title": "?ðŸ”—ðŸ“‹? Copy Current Language Server Symbols"
      },
      {
        "command": "extension.showSymbols",
        "title": "?ðŸ”—? Show Current Symbols"
      }
    ],
    "menus": {
        "editor/context": [
        {
          "command": "hipdot-vs-code-url-scheme-grabber.copyLink",
          "when": "editorTextFocus && editorHasSelection && config.hipdotUrlSchemeGrabber.contextMenu.copyLink"
        },
        {
          "command": "hipdot-vs-code-url-scheme-grabber.copyMarkdownLink",
          "when": "editorTextFocus && editorHasSelection && config.hipdotUrlSchemeGrabber.contextMenu.copyMarkdownLink"
        },
        {
          "command": "hipdot-vs-code-url-scheme-grabber.copyLinkAndSelection",
          "when": "editorTextFocus && editorHasSelection && config.hipdotUrlSchemeGrabber.contextMenu.copyLinkAndSelection"
        },
        {
          "command": "hipdot-vs-code-url-scheme-grabber.copyMarkdownLinkAndSelection",
          "when": "editorTextFocus && editorHasSelection && config.hipdotUrlSchemeGrabber.contextMenu.copyMarkdownLinkAndSelection"
        }
      ]
    },
    "configuration": {
      "title": "URL Scheme Grabber",
      "properties": {
        "hipdotUrlSchemeGrabber.includeColumn": {
          "type": "boolean",
          "default": false,
          "description": "Include the column number in the link to the current file and line number"
        },
        "hipdotUrlSchemeGrabber.contextMenu.copyLink": {
          "type": "boolean",
          "default": false,
          "description": "Enable context menu for 'Copy Link to Current File and Line Number'"
        },
        "hipdotUrlSchemeGrabber.contextMenu.copyMarkdownLink": {
          "type": "boolean",
          "default": false,
          "description": "Enable context menu for 'Copy Link in Markdown Format'"
        },
        "hipdotUrlSchemeGrabber.contextMenu.copyLinkAndSelection": {
          "type": "boolean",
          "default": false,
          "description": "Enable context menu for 'Copy Link to Current File and Line Number + Selection'"
        },
        "hipdotUrlSchemeGrabber.contextMenu.copyMarkdownLinkAndSelection": {
          "type": "boolean",
          "default": true,
          "description": "Enable context menu for 'Copy Link to Current File and Line Number + Selection in Markdown Format'"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "package": "yarn run compile && vsce package",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
	"dependencies": {
		"dt-python-parser": "^0.9.2-beta"
	}
}
